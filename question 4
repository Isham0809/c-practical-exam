#include<stdio.h>

void squareFun(int *arr,int size)
{
    printf("Square :");
    for(int i = 0; i<size;i++)
    {
        printf("%d ",arr[i]*arr[i]);
    }
}
 int main()
 {
    int size;
    printf("Enter Array size : ");
    scanf("%d",&size);

    int arr[size];

    printf("Enter Elements...\n");
    for(int i=0;i<size;i++)
    {
            printf("a[%d] : ",i);
            scanf("%d",&arr[i]);
    }
   squareFun((int *)arr,size);
 }
